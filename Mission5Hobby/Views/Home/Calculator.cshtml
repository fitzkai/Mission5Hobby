@{
    ViewData["Title"] = "Service Calculator";
}
<h1>@ViewData["Title"]</h1>

<h3>I'm available to bake with people as a tutor! Here's how much it would be: </h3>

@* creating an box that includes the information about tutoring *@

<fieldset>
    <legend>Hourly Cost Calculator</legend>

    <div id="costBox">Hourly Rate is $17 per hour</div>
    <br>
    <br />

    <label for="hoursInput">Enter hours wanted:</label>
    <input type="number" id="hoursInput" placeholder="Enter hours" min="1">

    <button id="calculateBtn">Calculate Total Cost</button>

    <br />
    <div id="costBox">
        Total Cost: $<span id="totalCost">0</span>
    </div>

</fieldset>

